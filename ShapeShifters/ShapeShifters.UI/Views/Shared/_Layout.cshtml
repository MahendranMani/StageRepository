
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
     <meta name="viewport" content="width=device-width initial-scale=1.0">
   
    

    <title>ShapeShifters</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Main.css" />
   

</head>
<body>
    <!-- Wrap page content-->
    <div id="wrap">
        <!-- Fixed navbar-->
        <div role="navigation" class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                    <a href="#" class="navbar-brand">Shape Shifters</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                   
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Search Hotels<b class="caret"></b></a>
                            <ul class="dropdown-menu inverse-dropdown">
                                <li class="dropdown-header">By Country</li>
                                <li> @Html.ActionLink("Nigeria","Hotels", new { CountryId = 1 })</li>
                                <li> @Html.ActionLink("South Africa", "Hotels", new { CountryId = 2 })</li>
                                <li> @Html.ActionLink("Zimbabwe", "Hotels", new { CountryId = 3 })</li>
                                <li class="divider"></li>
                                <li class="dropdown-header">By City</li>
                                <li> @Html.ActionLink("Harare", "HotelsByCity", new { CountryId = 3, City = "Harare" })</li>
                                <li> @Html.ActionLink("Victoria Falls", "HotelsByCity", new { CountryId = 3, City = "Victoria Falls" })</li>
                                
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Begin page content-->
        <div class="container">
            @RenderBody();
        
         
        </div>
    </div>


    <!-- Footer should be outside of .wrap-->
    <div id="footer">
        <div class="container">
            
            <p  class="text-muted">&copy; @DateTime.Now.Year - Shape Shifters</p>
        </div>
    </div>


    <!-- Bootstrap core JavaScript -->
    <!-- ================================= -->
    <!-- Placed at the end of the document so the page loads faster -->
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/Main.js"></script>
</body>
</html>